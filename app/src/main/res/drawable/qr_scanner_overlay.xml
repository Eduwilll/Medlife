<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Semi-transparent background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" />
        </shape>
    </item>
    
    <!-- Transparent scanning area -->
    <item android:left="50dp" android:top="200dp" android:right="50dp" android:bottom="200dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="2dp" android:color="#00FF00" />
        </shape>
    </item>
    
    <!-- Corner indicators -->
    <!-- Top-left corner -->
    <item android:left="50dp" android:top="200dp">
        <shape android:shape="rectangle">
            <size android:width="20dp" android:height="20dp" />
            <stroke android:width="3dp" android:color="#00FF00" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- Top-right corner -->
    <item android:right="50dp" android:top="200dp">
        <shape android:shape="rectangle">
            <size android:width="20dp" android:height="20dp" />
            <stroke android:width="3dp" android:color="#00FF00" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- Bottom-left corner -->
    <item android:left="50dp" android:bottom="200dp">
        <shape android:shape="rectangle">
            <size android:width="20dp" android:height="20dp" />
            <stroke android:width="3dp" android:color="#00FF00" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- Bottom-right corner -->
    <item android:right="50dp" android:bottom="200dp">
        <shape android:shape="rectangle">
            <size android:width="20dp" android:height="20dp" />
            <stroke android:width="3dp" android:color="#00FF00" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
</layer-list> 