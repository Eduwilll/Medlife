<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <!-- Empty State -->
        <include layout="@layout/view_cart_empty"/>

        <!-- Main Content -->
        <LinearLayout
            android:id="@+id/layoutMainContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Store Header -->
            <LinearLayout
                android:id="@+id/layoutStoreHeader"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/imageStoreLogo"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/logo"
                    android:background="@drawable/profile_bg"
                    android:scaleType="centerCrop" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">
                    <TextView
                        android:id="@+id/textStoreName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drogaria São Paulo"
                        android:textColor="#181725"
                        android:textSize="16sp"
                        android:fontFamily="@font/gilroybold"/>
                    <TextView
                        android:id="@+id/textStoreLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cidade Campinas"
                        android:textColor="#7C7C7C"
                        android:textSize="14sp"
                        android:fontFamily="@font/gilroyregular"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2E2E2" />

            <!-- Cart Items -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCartItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clipToPadding="false" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2E2E2" />

            <!-- Delivery Address -->
            <LinearLayout
                android:id="@+id/layoutDeliveryAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_location"
                    android:background="@drawable/profile_bg"
                    android:scaleType="centerInside" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">
                    <TextView
                        android:id="@+id/textDeliveryAddressTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entregar em"
                        android:textColor="#7C7C7C"
                        android:textSize="14sp"
                        android:fontFamily="@font/gilroyregular"/>
                    <TextView
                        android:id="@+id/textDeliveryAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R. Acre, cep 135197-125\nBairro São Jorge N43"
                        android:textColor="#181725"
                        android:textSize="16sp"
                        android:fontFamily="@font/gilroybold"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Delivery Options -->
            <LinearLayout
                android:id="@+id/layoutDeliveryOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp">
                <Button
                    android:id="@+id/buttonDeliveryImmediate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Imediato\nR$7.00"
                    android:textSize="14sp"
                    android:fontFamily="@font/gilroysemibold"
                    android:backgroundTint="#F5F5F5"
                    android:textColor="#1E56A0"/>
                <Space android:layout_width="8dp" android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/buttonDeliveryStorePickup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Retirar na Loja\nR$--"
                    android:textSize="14sp"
                    android:fontFamily="@font/gilroysemibold"
                    android:backgroundTint="#F5F5F5"
                    android:textColor="#1E56A0"/>
                <Space android:layout_width="8dp" android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/buttonDeliveryScheduled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Agendado\nR$7.00"
                    android:textSize="14sp"
                    android:fontFamily="@font/gilroysemibold"
                    android:backgroundTint="#F5F5F5"
                    android:textColor="#1E56A0"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2E2E2" />

            <!-- Payment Method -->
            <LinearLayout
                android:id="@+id/layoutPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/textPaymentMethod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Forma de pagamento"
                    android:textColor="#181725"
                    android:textSize="16sp"
                    android:fontFamily="@font/gilroybold"/>
                <Button
                    android:id="@+id/buttonChoosePayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Escolher"
                    android:textColor="#BF2F25"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/gilroysemibold"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2E2E2" />

            <!-- Summary -->
            <LinearLayout
                android:id="@+id/layoutSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Subtotal" android:textColor="#7C7C7C" android:textSize="16sp" android:fontFamily="@font/gilroyregular"/>
                    <TextView android:id="@+id/textSubtotal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="R$1.887,74" android:textColor="#B3B3B3" android:textSize="16sp" android:fontFamily="@font/gilroyregular"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Taxa de entrega" android:textColor="#7C7C7C" android:textSize="16sp" android:fontFamily="@font/gilroyregular"/>
                    <TextView android:id="@+id/textDeliveryFee" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="R$7,00" android:textColor="#B3B3B3" android:textSize="16sp" android:fontFamily="@font/gilroyregular"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Desconto" android:textColor="#7C7C7C" android:textSize="16sp" android:fontFamily="@font/gilroyregular"/>
                    <TextView android:id="@+id/textDiscount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="R$283,16" android:textColor="#B3B3B3" android:textSize="16sp" android:fontFamily="@font/gilroyregular"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Total" android:textColor="#181725" android:textSize="18sp" android:fontFamily="@font/gilroybold"/>
                    <TextView android:id="@+id/textTotal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="R$1.611,58" android:textColor="#181725" android:textSize="18sp" android:fontFamily="@font/gilroybold"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Warning and Prescription Upload -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_warning"
                    android:tint="#BF2F25"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/textPrescriptionWarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notamos que certos produtos no carrinho necessita de receita médica, para finalizar a compra, por favor insira as receitas!"
                    android:textColor="#BF2F25"
                    android:textSize="14sp"
                    android:fontFamily="@font/gilroybold"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
                <Button
                    android:id="@+id/buttonUploadPrescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enviar receita"
                    android:textColor="#FCFCFC"
                    android:backgroundTint="#1E56A0"
                    android:fontFamily="@font/gilroysemibold"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>

            <!-- Checkout Button -->
            <Button
                android:id="@+id/buttonCheckout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finalizar Compra"
                android:textColor="#FCFCFC"
                android:backgroundTint="#1E56A0"
                android:textSize="18sp"
                android:fontFamily="@font/gilroybold"
                android:layout_margin="16dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>