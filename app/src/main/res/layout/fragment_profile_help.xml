<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Ajuda"
        android:textColor="#181725"
        android:textSize="24sp"
        android:fontFamily="@font/gilroybold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle">

        <TextView
            android:id="@+id/textHelpContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Como usar o MEDLIFE:\n\n1. Compra de Medicamentos\n• Faça login na sua conta\n• Selecione os medicamentos desejados\n• Envie a receita médica digitalizada\n• Escolha a farmácia parceira\n• Realize o pagamento\n\n2. Entrega\n• Escolha o endereço de entrega\n• Acompanhe o status do pedido\n• Receba seu medicamento com segurança\n\n3. Suporte\n• Dúvidas sobre medicamentos\n• Problemas com pedidos\n• Informações sobre receitas\n• Contato com farmácias\n\nPara mais informações, entre em contato com nosso suporte através do e-mail: suporte@medlife.com.br"
            android:textColor="#181725"
            android:textSize="16sp"
            android:fontFamily="@font/gilroyregular"
            android:lineSpacingExtra="8dp" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 