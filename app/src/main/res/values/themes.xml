<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Medlife" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/social_button_facebook</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medlife_blue_login</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>

        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Medlife.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Medlife.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Medlife.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Medlife.Body2</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.Medlife.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Medlife.Button.OutlinedButton</item>

        <!-- TextInputLayout styling -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense</item>
        <item name="boxStrokeColor">@color/input_border_color</item>
        <item name="hintTextColor">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/text_secondary_dark</item>
    </style>

    <!-- NoActionBar theme variant -->
    <style name="Theme.Medlife.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>